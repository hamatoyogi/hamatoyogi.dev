---
import { BaseLayout } from '~layouts/BaseLayout';
import { Heading1 } from '~typography/Heading1';
import { ExternalLink } from '~components/link';
import { formatDate } from 'src/utils/date-formatter';

const list = [
  {
    where: 'Builder.io live stream',
    when: 'Dec 8, 2022',
    title: 'Resumable React - Leveraging the React ecosystem with Qwik',
    link: 'https://www.youtube.com/watch?v=IGIPBAWRw_M&t=173s',
  },
  {
    where: 'React & React Native IL Meetup',
    when: 'Jan 23, 2019',
    title: 'Next.js Stories from the Trenches',
    link: 'https://www.youtube.com/watch?v=srueFUnJ8Jo',
  },
  {
    where: 'JS Jabber',
    when: 'November 23, 2021',
    title: 'Do You Have Dev FOMO?',
    link: 'https://topenddevs.com/podcasts/javascript-jabber/episodes/do-you-have-dev-fomo-ft-yoav-ganbar-jsj-510',
  },
  {
    where: 'Frontend Land',
    when: 'Jul 30 2021',
    title: 'Next.js (Hebrew)',
    link: 'https://rss.com/podcasts/frontend-land/246565/',
  },
  {
    where: 'Frontend Land',
    when: 'Aug 05 2021',
    title: 'Webpack Module Federaion with Zack Jackson & Yoav Ganbar (English)',
    link: 'https://rss.com/podcasts/frontend-land/250321/',
  },
  {
    where: 'Next.js IL Community Meetup #1',
    when: 'May 16 2022',
    title: 'The History of Next.js (Hebrew)',
    link: 'https://www.youtube.com/watch?v=AloxBdUQW-o',
  },
  {
    where: 'FedBites episode #6',
    when: 'Jul 5, 2022',
    title: 'Kent C. Dodds comes to Israel',
    link: 'https://www.youtube.com/watch?v=mkuXLFHHyuE',
  },
].sort((a, z) => new Date(z.when).getTime() - new Date(a.when).getTime());
---

<BaseLayout
  title="Appearences | hamatoyogi.dev"
  description="Apperences, podcasts, interviews, and talks by Yoav Ganbar"
>
  <Heading1 extraClasses="mt-10 md:mt-32">Appearences</Heading1>
  <ul role="list" class="ml-4 space-y-4 mt-10 md:mt-20 list-disc">
    {
      list.map(({ where, when, title, link }) => (
        <li>
          <ExternalLink href={link} withIcon>
            {title} | {where} - {formatDate({ date: when })}
          </ExternalLink>
        </li>
      ))
    }
  </ul>
</BaseLayout>

<style>
  .link-card-grid {
    grid-template-columns: repeat(auto-fit, minmax(24ch, 1fr));
  }
</style>
