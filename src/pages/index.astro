---
import { Image } from '@astrojs/image/components';

import myImage from '~assets/yoav.png';

import { BaseLayout } from '~layouts/BaseLayout';
import { Card } from '~components/card';
import { Heading1 } from '~typography/Heading1';

Astro.response.headers.set(
  'Cache-Control',
  's-maxage=1, stale-while-revalidate=59',
);
---

<BaseLayout
  title="hamatoyogi's site"
  description="Yoav Ganbar AKA HamatoYogi · Web Developer, FedBites podcasr co-host, community orginizer. I love building products, shipping code, talking about it, and writing about it."
>
  <figure
    class="w-20 h-20 mt-10 overflow-hidden rounded-full border border-lavender-gray"
  >
    <Image
      src={myImage}
      format="webp"
      width={160}
      height={160}
      alt="a picture of Yoav  Ganbar"
    />
  </figure>
  <Heading1 extraClasses="mt-10">Yoav Ganbar</Heading1>
  <h2 class="text-2xl md:text-4xl mt-4">
    Full Stack Web Developer & Front end Architect. <br />Product builder,
    creator of value, top notch UX, performant & useable UI.
  </h2>
  <p class="mt-10 md:mt-14 flex gap-3 items-center flex-wrap">
    <span>🎙 Co-host of FedBites</span>
    <span>👥 Co-founder Next.js IL community</span>
    <span>👨‍👩‍👦 Father of 1</span>
    <span>📒 Blogger</span>
    <span>🏄🏽‍♂️ Surfer</span>
    <span>🛹 Skater</span>
    <span>🕹 Gamer</span>
    <span>🎷 Saxaphone Player</span>
  </p>
  <ul role="list" class="link-card-grid grid gap-4 my-10 md:my-20">
    <Card href="/about" title="about" body="Get to know me a bit..." />
    <Card href="/blog" title="blog" body="Read the latest from my blog" />
    <Card
      href="/appearances"
      title="appearances"
      body="Pocasts, interviews, and talks I've given."
    />
    <Card
      href="https://medium.com/@HamatoYogi"
      title="Medium"
      body="See what I've written on Medium"
      isExternalLink
    />
    <Card
      href="https://dev.to/hamatoyogi"
      title="Dev.to"
      body="Me on Dev.to"
      isExternalLink
    />
    <Card
      href="https://twitter.com/hamatoyogi/"
      title="HamatoYogi"
      body="My Twitter shenanigans"
      isExternalLink
    />
    <Card
      href="https://anchor.fm/fedbites"
      title="FedBites Podcast"
      body="I co-host FedBites"
      isExternalLink
    />
  </ul>
</BaseLayout>

<style>
  .link-card-grid {
    grid-template-columns: repeat(auto-fit, minmax(24ch, 1fr));
  }
</style>
