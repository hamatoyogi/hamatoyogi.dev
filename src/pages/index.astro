---
import { Image } from '@astrojs/image/components';

import myImage from '~assets/yoav.png';

import { BaseLayout } from '~layouts/BaseLayout';
import { Card } from '~components/card';
import { Heading1 } from '~typography/Heading1';

Astro.response.headers.set(
  'Cache-Control',
  's-maxage=1, stale-while-revalidate=59',
);
---

<BaseLayout
  title="hamatoyogi's site"
  description="Yoav Ganbar AKA HamatoYogi · Web Developer, FedBites podcast co-host, community orginizer. I love building products, shipping code, talking about it, and writing about it."
>
  <figure
    class="w-20 h-20 mt-10 overflow-hidden border rounded-full border-lavender-gray"
  >
    <Image
      src={myImage}
      format="webp"
      width={160}
      height={160}
      alt="a picture of Yoav  Ganbar"
    />
  </figure>
  <Heading1 extraClasses="mt-10"
    >Yoav Ganbar <span class="text-xl"> </span>
    <h2 class="mt-4 text-2xl md:text-4xl">
      Developer Experience at Builder.io
    </h2>
    <h3 class="mt-2 text-xl md:text-2xl">
      Trying to make the web a better place and help developers along the way.
    </h3>
    <p class="flex flex-wrap items-center gap-3 mt-10 md:mt-14">
      <span>🎙 Co-host of FedBites</span>
      <span>👥 Co-founder Next.js IL community</span>
      <span>👨‍👩‍👦 Father of 1</span>
      <span>📒 Blogger</span>
      <span>🏄🏽‍♂️ Surfer</span>
      <span>🛹 Skater</span>
      <span>🕹 Gamer</span>
      <span>🎷 Saxophone Player</span>
    </p>
    <ul role="list" class="grid gap-4 my-10 link-card-grid md:my-20">
      <Card href="/about" title="about" body="Get to know me a bit..." />
      <Card href="/blog" title="blog" body="Read the latest from my blog" />
      <Card
        href="/appearances"
        title="appearances"
        body="Pocasts, interviews, and talks I've given."
      />
      <Card
        href="https://medium.com/@HamatoYogi"
        title="Medium"
        body="See what I've written on Medium"
        isExternalLink
      />
      <Card
        href="https://dev.to/hamatoyogi"
        title="Dev.to"
        body="Me on Dev.to"
        isExternalLink
      />
      <Card
        href="https://twitter.com/hamatoyogi/"
        title="HamatoYogi"
        body="My Twitter shenanigans"
        isExternalLink
      />
      <Card
        href="https://anchor.fm/fedbites"
        title="FedBites Podcast"
        body="I co-host FedBites"
        isExternalLink
      />
    </ul>
  </Heading1>

  <style>
    .link-card-grid {
      grid-template-columns: repeat(auto-fit, minmax(24ch, 1fr));
    }
  </style>
</BaseLayout>
