---
export interface Props {
  extraClasses?: string;
}

const { extraClasses } = Astro.props as Props;
---

<h1
  class:list={[
    'text-4xl font-bold text-dodger-blue capitalize dark:text-melrose',
    extraClasses,
  ]}
  class="text-4xl font-bold capitalize text-dodger-blue dark:text-melrose"
>
  <slot />
</h1>
