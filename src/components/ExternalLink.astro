---
export interface Props {
  href: string;
}

const { href } = Astro.props as Props;
---

<a
  href={href}
  target="_blank"
  rel="noopener noreferrer"
  class="group underline transition-all font-medium hover:text-slate-700 dark:hover:text-slate-300 decoration-slate-500 dark:decoration-red-300 decoration-wavy"
>
  <slot />
  <span class="text-lg inline-block group-hover:translate-x-1 transition-all"
    >&rarr;</span
  >
</a>
