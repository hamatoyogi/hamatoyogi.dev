---
import { External } from '~components/icons';

export interface Props {
  href: string;
  withIcon?: boolean;
}

const { href, withIcon = false } = Astro.props as Props;
---

<a
  href={href}
  target="_blank"
  rel="noopener noreferrer"
  class:list={[
    'font-bold underline transition-all group underline-offset-4 hover:text-dodger-blue dark:hover:text-melrose decoration-dodger-blue dark:decoration-melrose',
    withIcon && 'pr-1',
  ]}
>
  <slot />
  {
    withIcon && (
      <span class="inline-block transition-all group-hover:translate-x-1">
        <External />
      </span>
    )
  }
</a>
